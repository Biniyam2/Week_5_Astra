@model ApplicationCore.Models.Response.MovieResponse
    <link href="~/css/site.css" rel="stylesheet" />

<div>
        <div class="container-fluid border border-dark rounded col_ID" style="background-image: url( @Html.DisplayFor(model => model.BackdropUrl) ); background-size: cover;">

            <div class="row col_size">
                <div class="col-md-4 col_size">
                    <img style="max-height:70%; max-width:70%" alt="@Model.Title" src=" @Html.DisplayFor(model => model.PosterUrl) " />
                </div>

                <div class="col-md-4 text-white col_size">
                    <h3> @Html.DisplayFor(model => model.Title)</h3>
                    <h6>@Html.DisplayFor(model => model.Tagline) </h6>
                    <div class="inner_content">
                        <h5> @Html.DisplayFor(model => model.RunTime)  | </h5>   <h5> @Html.DisplayFor(model => model.ReleaseDate.Value.Year) </h5>
                    </div>
                    <div>@Html.DisplayFor(model => model.Rating)</div>
                    <article>@Html.DisplayFor(model => model.OverView)</article>
                </div>

                <div class="col-md-4 text-white col_size">
                    <div class=" col_input">
                        <input class="btn-primary" type="button" value="BUY 9.90" />
                        <input class="btn-primary" type="button" value="WATCH MOVIE" />
                        <input class="btn-primary" type="button" value="BUY 9.90" />
                        <input class="btn-primary" type="button" value="WATCH MOVIE" />
                    </div>
                </div>
            </div>

        </div>
        <div>
            @foreach (var item in Model.Casts)
             {
                <div class="card col-1">
                    <img class="rounded-circle card-img-top" src="@item.ProfilePath" alt="@item.Name" style="width:100%; height:100%"/>
                    <label class="card-title"> @Html.DisplayFor(cast => item.Name) </label> 
                </div>
             }
        </div>
    
</div>
<div>
    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
