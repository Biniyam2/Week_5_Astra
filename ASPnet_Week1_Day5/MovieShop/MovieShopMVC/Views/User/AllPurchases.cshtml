@model IEnumerable<ApplicationCore.Models.Response.PurchaseResponse>

@{
    ViewData["Title"] = "AllPurchases";
}

<h1>AllPurchases</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Title)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Account" asp-action="Profile" asp-route-id="@item.User.Id"> @Html.DisplayFor(modelItem => item.User.FirstName +" "+ item.User.LastName) </a>  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDateTime)
            </td>
            <td>
                <div class="col-2 col-lg-3 col-sm-4 col-xl-2">
                    <partial model="item.Movie" name="_MovieCard" />
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
